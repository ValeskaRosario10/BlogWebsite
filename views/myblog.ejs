<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"  rel="stylesheet" >
  <link rel="stylesheet" href="/styles.css">
 

<div>
    <h1>Create a blog worth sharing </h1>
    <h2> Have something in your mind : Blog it now </h2>
</div>

<div>
    <form action="addBlog" method="post">
        
        <input type="text" name="title" placeholder="title " id=""> <br>
        <input type="text" name="interest" placeholder="Domain "> <br>
        <input type="text" name="summary" placeholder="summary " id=""> <br>
        <input type="file" name="img" placeholder="Image " id=""> <br>
        <textarea name="blogcontent" id="blogcontent" placeholder="Type your blog content here "> </textarea>
        <button>SUbmit </button>
    </form>
    <p id="message"></p>

</div>






<h1>Some of the blogs written by you</h1>



<div class="card-body" >
    <div class="row"> <!-- Add row for grid system -->
      <% blogs.forEach(blog => { %>
      <div class="col-md-4 col-sm-6 mb-4"> 
        <!-- Grid classes applied here -->
       
        <div class="card p-1 rounded border border-black bg-white">
         
            <a href="/blog/<%= blog.id %>" name="id" style="text-decoration: none; color: inherit;">   <div class="p-2">
            <img src="../public/images/<%= blog.id %>.png" alt="<%= blog.id %>" class="img-fluid">
            <h3><%= blog.id %></h3>
            <h3 class="card-title">Topic: <%= blog.title %></h3>
            <p class="card-text text-muted">Posted By: <span class="fw-semibold"><%= blog.author %></span></p>
            <p class="card-text">Date: <span class="fw-semibold"><%= new Date(blog.pdate).toDateString() %></span></p>
            <p class="card-text">Domain: <%= blog.interest %></p>
            <a class="btn btn-outline-info btn-sm" href="/readblog/<%= blog.id %>" role="button">Read</a>
                     </div>
        </div>
      </div>  
      <% }) %>
    </div>
  </div>